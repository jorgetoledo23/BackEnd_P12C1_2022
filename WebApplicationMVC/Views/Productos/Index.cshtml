@model List<Producto>
<div class="card text-center">
  <div class="card-body">
    <h5 class="card-title">Administracion de Productos</h5>
    <a asp-action="AddProducto"
        class="btn btn-primary"><i class="fa-solid fa-circle-plus m-2"></i>Agregar Producto</a>
  </div>
</div>
<div>
    <form asp-action="Index" method="get">
        <input type="text" name="Filtro" placeholder="Filtro" />
        <input type="submit" value="Filtrar" />
    </form>
</div>


<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>Producto Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Imagen</th>
            <th>Categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <td>@item.ProductoId</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio</td>
                <td>@item.Stock</td>
                <td><img class="img-fluid" src="@item.UrlImagen" width="100" height="100" /></td>
                <td>@item.Categoria.Nombre</td>
                <td>
                    <a asp-action="EditProducto" asp-route-Id="@item.ProductoId"><i class="fa-solid fa-pen m-1"></i></a>
                    <a asp-action="DeleteProducto" asp-route-Id="@item.ProductoId" onclick="return confirm('¿Estas Seguro?')"><i class="fa-solid fa-trash m-1"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>