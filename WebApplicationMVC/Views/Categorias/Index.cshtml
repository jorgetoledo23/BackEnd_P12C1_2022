@model List<Categoria>
<div class="card text-center">
  <div class="card-body">
    <h5 class="card-title">Administracion de Categorias</h5>
    <a asp-action="AddCategory"
        class="btn btn-primary"><i class="fa-solid fa-circle-plus m-2"></i>Agregar Categoria</a>
  </div>
</div>
<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>Categoria Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <td>@item.CategoriaId</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="EditCategory" asp-route-Id="@item.CategoriaId"><i class="fa-solid fa-pen m-1"></i></a>
                    <a asp-action="DeleteCategory" asp-route-Id="@item.CategoriaId" onclick="return confirm('¿Estas Seguro?')"><i class="fa-solid fa-trash m-1"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>